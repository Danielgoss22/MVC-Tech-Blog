<section class="container">
  <div>
    <div class="container">
      <h2>{{post_title}}</h2>
    </div>
  </div>
</section>
<div class="container">

  <div class="m-5">
    <div class="m-5">
      <p>{{post_body}}</p>
      {{#each comments as |comment|}}
        <div class="comment">
          <p>{{{comment_body}}}</p>
        </div>
      {{/each}}
    </div>
  </div>

</div>
<div>
  <form method="post">
    <textarea id="newComment" name="newComment"></textarea>
    <br />
    <button type="submit" id="add-comment">Add Comment</button>

  </form>
</div>
<script src="/js/comment.js"></script>